<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/tvResetPasswordTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset Password"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:fontFamily="@font/poppins_thin"
        android:layout_margin="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/tvResetPasswordContent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="we will send you the password reset link to you email"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:fontFamily="@font/poppins_light"
        android:layout_margin="10dp"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvResetPasswordTitle"/>
    <EditText
        android:id="@+id/edResetPassword"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintTop_toBottomOf="@id/tvResetPasswordContent"
        app:layout_constraintStart_toStartOf="@id/tvResetPasswordContent"
        app:layout_constraintEnd_toEndOf="@id/tvResetPasswordContent"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonCancelResetPassword"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:textAllCaps="false"
        android:layout_margin="10dp"
        android:background="@drawable/white_background"
        app:layout_constraintTop_toBottomOf="@id/edResetPassword"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/buttonSendResetPassword"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonSendResetPassword"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Send"
        android:textAllCaps="false"
        android:background="@drawable/blue_background"
        android:textColor="@color/white"
        android:layout_margin="10dp"
        app:layout_constraintStart_toEndOf="@id/buttonCancelResetPassword"
        app:layout_constraintTop_toBottomOf="@id/edResetPassword"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>